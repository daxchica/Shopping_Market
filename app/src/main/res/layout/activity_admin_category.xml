<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/veg_items"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/raw_vegetable1"
            android:adjustViewBounds="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/meat_fish_items"
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:src="@drawable/meat_and_fish_fresh_food"
            android:adjustViewBounds="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />
        <ImageView
            android:id="@+id/snacks1_items"
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:src="@drawable/cci_locales_supermaxi_2_1"
            android:adjustViewBounds="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/snacks2_items"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/cci_locales_supermaxi_3"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />

        <ImageView
            android:id="@+id/personal_care_items"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/personal_care"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />

        <ImageView
            android:id="@+id/house_cleaning_items"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/cleaning_material_250x250"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/first_aid_items"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/health_care_first_aid_supplies"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />




        <ImageView
            android:id="@+id/office_items"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/office_supplies_png_2"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />

        <ImageView
            android:id="@+id/liquor_items"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/liquor_store"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />
    </LinearLayout>


</RelativeLayout>